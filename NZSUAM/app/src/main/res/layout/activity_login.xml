<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashActivity"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@color/white">

    <ImageView
        android:layout_width="@dimen/login_image_width"
        android:layout_height="@dimen/login_image_height"
        android:contentDescription="@string/image_text"
        android:src="@drawable/ic_logo_nzs"
        android:layout_marginBottom="@dimen/login_image_margin_bot"/>

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/login_card_view_width"
        android:layout_height="@dimen/login_card_view_height"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="@dimen/login_card_view_corner_radius">
    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/id_login_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/login_text_input_margin_start_end"
        android:layout_marginTop="@dimen/login_email_margin_top"
        android:layout_marginEnd="@dimen/login_text_input_margin_start_end"
        android:gravity="center"
        android:backgroundTint="#b5e0f5"
        android:hint="@string/login_email_text"
        android:textColorHint="#c3d6d6"
        android:textColor="@color/black"
        android:textSize="@dimen/login_button_text_size"
        android:inputType="textEmailAddress"/>
    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/id_login_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/login_text_input_margin_start_end"
        android:layout_marginTop="@dimen/login_password_margin_top"
        android:layout_marginEnd="@dimen/login_text_input_margin_start_end"
        android:gravity="center"
        android:backgroundTint="#b5e0f5"
        android:hint="@string/login_password_text"
        android:textColorHint="#c3d6d6"
        android:textColor="@color/black"
        android:textSize="@dimen/login_button_text_size"
        android:inputType="textPassword">
    </androidx.appcompat.widget.AppCompatEditText>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/id_login_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/login_button_margin_start_end"
        android:layout_marginTop="@dimen/login_button_margin_top"
        android:layout_marginEnd="@dimen/login_button_margin_start_end"
        android:background="@drawable/login_button_state"
        android:gravity="center"
        android:paddingTop="@dimen/login_button_padding_top_bot"
        android:paddingBottom="@dimen/login_button_padding_top_bot"
        android:text="@string/login_button_text"
        android:textColor="@drawable/login_button_text_state"
        android:textSize="@dimen/login_button_text_size"/>
    </androidx.cardview.widget.CardView>

</LinearLayout>