<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/color_primary"
    android:orientation="vertical"
    android:gravity="bottom">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        app:cardCornerRadius="20dp"
        android:backgroundTint="@color/white">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="settings"
                    android:layout_gravity="center"
                    android:textColor="@color/color_primary"/>
    </androidx.cardview.widget.CardView>



    <androidx.cardview.widget.CardView
        android:id="@+id/id_settings_nav"
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_nav_height"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="@dimen/main_nav_corner"
        android:layout_marginBottom="@dimen/main_nav_margin_bot">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/id_settings_nav_home"
                android:layout_width="@dimen/main_nav_image_width_height"
                android:layout_height="@dimen/main_nav_image_width_height"
                android:layout_marginTop="@dimen/main_nav_image_margin_top_bot"
                android:layout_marginBottom="@dimen/main_nav_image_margin_top_bot"
                android:layout_marginLeft="@dimen/main_nav_image_margin_left_right"
                android:layout_marginRight="@dimen/main_nav_image_margin_left_right"
                android:background="@drawable/ic_outline_home_24"
                android:backgroundTint="@color/main_nav_image_tint" />
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/id_settings_nav_tree"
                android:layout_width="@dimen/main_nav_image_width_height"
                android:layout_height="@dimen/main_nav_image_width_height"
                android:layout_marginTop="@dimen/main_nav_image_margin_top_bot"
                android:layout_marginBottom="@dimen/main_nav_image_margin_top_bot"
                android:layout_marginLeft="@dimen/main_nav_image_margin_left_right"
                android:layout_marginRight="@dimen/main_nav_image_margin_left_right"
                android:background="@drawable/ic_outline_account_tree_24"
                android:backgroundTint="@color/main_nav_image_tint" />
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/id_settings_nav_notifications"
                android:layout_width="@dimen/main_nav_image_width_height"
                android:layout_height="@dimen/main_nav_image_width_height"
                android:layout_marginTop="@dimen/main_nav_image_margin_top_bot"
                android:layout_marginBottom="@dimen/main_nav_image_margin_top_bot"
                android:layout_marginLeft="@dimen/main_nav_image_margin_left_right"
                android:layout_marginRight="@dimen/main_nav_image_margin_left_right"
                android:background="@drawable/ic_outline_notifications_24"
                android:backgroundTint="@color/main_nav_image_tint" />
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/id_settings_nav_settings"
                android:layout_width="@dimen/main_nav_image_width_height"
                android:layout_height="@dimen/main_nav_image_width_height"
                android:layout_marginTop="@dimen/main_nav_image_margin_top_bot"
                android:layout_marginBottom="@dimen/main_nav_image_margin_top_bot"
                android:layout_marginLeft="@dimen/main_nav_image_margin_left_right"
                android:layout_marginRight="@dimen/main_nav_image_margin_left_right"
                android:background="@drawable/ic_outline_settings_24"
                android:backgroundTint="@color/main_nav_image_tint" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>