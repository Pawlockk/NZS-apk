<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/background_color"
    android:orientation="vertical"
    android:gravity="top">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/id_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/bungee"
            android:text="@string/app_name"
            android:textColor="@color/color_primary"
            android:textSize="@dimen/toolbar_text_size"/>
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="bottom">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/id_main_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/login_button_margin_start_end"
            android:layout_marginTop="@dimen/login_button_margin_top"
            android:layout_marginEnd="@dimen/login_button_margin_start_end"
            android:background="@drawable/login_button_state"
            android:gravity="center"
            android:paddingTop="@dimen/login_button_padding_top_bot"
            android:paddingBottom="@dimen/login_button_padding_top_bot"
            android:text="Wyloguj siÄ™"
            android:textColor="@drawable/login_button_text_state"
            android:textSize="@dimen/login_button_text_size"
            android:layout_marginBottom="50dp"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/id_main_nav"
            android:layout_width="match_parent"
            android:layout_height="@dimen/main_nav_height"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="@dimen/main_nav_corner"
            android:layout_marginBottom="@dimen/main_nav_margin_bot">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/id_main_nav_home"
                    android:layout_width="@dimen/main_nav_image_width_height"
                    android:layout_height="@dimen/main_nav_image_width_height"
                    android:layout_marginTop="@dimen/main_nav_image_margin_top_bot"
                    android:layout_marginBottom="@dimen/main_nav_image_margin_top_bot"
                    android:layout_marginLeft="@dimen/main_nav_image_margin_left_right"
                    android:layout_marginRight="@dimen/main_nav_image_margin_left_right"
                    android:background="@drawable/ic_outline_home_24"
                    android:backgroundTint="@color/main_nav_image_tint" />
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/id_main_nav_tree"
                    android:layout_width="@dimen/main_nav_image_width_height"
                    android:layout_height="@dimen/main_nav_image_width_height"
                    android:layout_marginTop="@dimen/main_nav_image_margin_top_bot"
                    android:layout_marginBottom="@dimen/main_nav_image_margin_top_bot"
                    android:layout_marginLeft="@dimen/main_nav_image_margin_left_right"
                    android:layout_marginRight="@dimen/main_nav_image_margin_left_right"
                    android:background="@drawable/ic_outline_account_tree_24"
                    android:backgroundTint="@color/main_nav_image_tint" />
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/id_main_nav_notifications"
                    android:layout_width="@dimen/main_nav_image_width_height"
                    android:layout_height="@dimen/main_nav_image_width_height"
                    android:layout_marginTop="@dimen/main_nav_image_margin_top_bot"
                    android:layout_marginBottom="@dimen/main_nav_image_margin_top_bot"
                    android:layout_marginLeft="@dimen/main_nav_image_margin_left_right"
                    android:layout_marginRight="@dimen/main_nav_image_margin_left_right"
                    android:background="@drawable/ic_outline_notifications_24"
                    android:backgroundTint="@color/main_nav_image_tint" />
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/id_main_nav_settings"
                    android:layout_width="@dimen/main_nav_image_width_height"
                    android:layout_height="@dimen/main_nav_image_width_height"
                    android:layout_marginTop="@dimen/main_nav_image_margin_top_bot"
                    android:layout_marginBottom="@dimen/main_nav_image_margin_top_bot"
                    android:layout_marginLeft="@dimen/main_nav_image_margin_left_right"
                    android:layout_marginRight="@dimen/main_nav_image_margin_left_right"
                    android:background="@drawable/ic_outline_settings_24"
                    android:backgroundTint="@color/main_nav_image_tint" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>



</LinearLayout>